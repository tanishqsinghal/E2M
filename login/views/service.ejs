<div>
    <form action="/services/<%=category%>/filter" method="Get">
        <label>city</label>
        <select name="city">
          <option value="all" <% if(filter.city=="all")  {%>selected <% }%> >--</option>
          <option value="Delhi" <% if(filter.city=="Delhi")  {%>selected <% }%>>Delhi</option>
          <option value="Jaipur" <% if(filter.city=="Jaipur")  {%>selected <% }%>>Jaipur</option>
          <option value="Banglore" <% if(filter.city=="Banglore")  {%>selected <% }%>>Banglore</option>
          <option value="Mumbai" <% if(filter.city=="Mumbai")  {%>selected <% }%>>Mumbai</option>
        </select><br>
        <label>name sort</label><br>
        <input type="radio"  value=0 name="namesort"<% if(filter.namesort==0)  {%>checked <% }%>>no sort</option>
        <input type="radio"  value=1 name="namesort"<% if(filter.namesort==1)  {%>checked <% }%>>A to Z</option>
        <input type="radio"  value=-1 name="namesort"<% if(filter.namesort==-1)  {%>checked <% }%>>Z to A</option>
        <br><label>rating sort</label><br>
        <input type="radio"  value=0 name="ratingsort"<% if(filter.ratingsort==0)  {%>checked <% }%>>no sort</option>
        <input type="radio"  value=1 name="ratingsort"<% if(filter.ratingsort==1)  {%>checked <% }%>>low to high</option>
        <input type="radio"  value=-1 name="ratingsort"<% if(filter.ratingsort==-1)  {%>checked <% }%>>high to low</option>
     
        <br>
      <input type="submit" name="">

        

    </form>
