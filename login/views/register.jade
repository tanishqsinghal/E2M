extends layout

block content
	h2.page-header Register
	p Register using form below
	if errors
		each error, i in errors
			div.alert.alert-danger #{error.msg}
			br
	form(method = 'post', action = '/users/register', enctype = 'multipart/form-data')
		.form-group
		label Name
		input.form-control(name = 'name', type = 'text', placeholder = 'Name')
		.form-group
		label Email
		input.form-control(name = 'email', type = 'email', placeholder = 'Email')
		.form-group
		.form-group
		label Password
		input.form-control(name = 'password', type = 'password', placeholder = 'Password')
		.form-group
		input.btn.btn-primary(type = 'submit', name = 'submit' value = 'Register')
